CREATE TABLE `node` (
    `id` int(20) unsigned NOT NULL AUTO_INCREMENT,
	`device_id` varchar(512) NOT NULL UNIQUE ,
    `last_time` varchar(225) DEFAULT NULL ,
    `geo` varchar(512),
	`node_type` varchar(255) DEFAULT '' ,
	`address` varchar(255) DEFAULT '' ,
    `is_online` int(20)  DEFAULT '0' ,
	`online_time` int(64) DEFAULT '0' ,
	PRIMARY KEY (`id`)
  ) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8 COMMENT='node info';

CREATE TABLE `validate_result` (
    `id` int(20) unsigned NOT NULL AUTO_INCREMENT,
	`device_id` varchar(512) NOT NULL ,
	`validator_id` varchar(512) NOT NULL ,
    `round_id` varchar(225) NOT NULL ,
    `msg` varchar(512) ,
	`strat_time` varchar(255) DEFAULT '',
	`end_time` varchar(255) DEFAULT '',
    `status` int(20)  DEFAULT '0' ,
	PRIMARY KEY (`id`)
  ) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8 COMMENT='validate result info';

CREATE TABLE `validate_err` (
    `id` int(20) unsigned NOT NULL AUTO_INCREMENT,
	`device_id` varchar(512) NOT NULL,
    `round_id` varchar(225) NOT NULL ,
	PRIMARY KEY (`id`)
  ) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8 COMMENT='validate error device';
