CREATE TABLE `node_info` (
	`device_id` varchar(128) NOT NULL UNIQUE ,
    `online_time` int DEFAULT '0',
    `profit` float DEFAULT '0',
    `download_traffic` float DEFAULT '0',
    `upload_traffic` float DEFAULT '0',
    `download_blocks` bigint DEFAULT '0' ,
	`private_key` varchar(1024) DEFAULT '' ,
    `last_time` datetime DEFAULT CURRENT_TIMESTAMP ,
    `quitted` BOOLEAN DEFAULT '0' ,
	`port_mapping` varchar(8) DEFAULT '' ,
	PRIMARY KEY (`device_id`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8 COMMENT='node info';

CREATE TABLE `validate_result` (
    `id` int unsigned NOT NULL AUTO_INCREMENT,
    `round_id` varchar(128) NOT NULL,
    `device_id` varchar(128) NOT NULL,
    `validator_id` varchar(128) NOT NULL,
    `block_number` bigint DEFAULT '0' COMMENT 'number of blocks verified',
    `status` tinyint DEFAULT '0',
    `duration` bigint DEFAULT '0' COMMENT 'validate duration, microsecond',
    `bandwidth` float DEFAULT '0',
    `start_time` datetime DEFAULT NULL,
    `end_time` datetime DEFAULT NULL,
    PRIMARY KEY (`id`),
    KEY `round_device` (`round_id`,`device_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='validate result info';

CREATE TABLE `block_download_info` (
    `id` varchar(64) NOT NULL UNIQUE,
    `block_cid` varchar(128) NOT NULL,
    `device_id` varchar(128) NOT NULL,
    `carfile_cid` varchar(128) NOT NULL,
    `block_size` int(20) DEFAULT '0',
    `speed` int(20)  DEFAULT '0' ,
    `reward` int(20) DEFAULT '0',
    `status` TINYINT  DEFAULT '0' ,
    `failed_reason` varchar(128) DEFAULT '' ,
    `client_ip` varchar(18) NOT NULL,
    `created_time` datetime DEFAULT CURRENT_TIMESTAMP,
    `complete_time` datetime,
    PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='block download information';

CREATE TABLE `node_allocate_info` (
    `id` int unsigned NOT NULL AUTO_INCREMENT,
	`device_id` varchar(128) NOT NULL UNIQUE,
    `secret` varchar(64) NOT NULL ,
    `create_time` varchar(64) DEFAULT '' ,
	`node_type` varchar(64) DEFAULT '' ,
	PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8 COMMENT='node allocate info';

CREATE TABLE `replicas` (
    `id` varchar(128) NOT NULL UNIQUE,
	`carfile_hash` varchar(128) NOT NULL,
    `status` TINYINT  DEFAULT '0' ,
    `device_id` varchar(128) NOT NULL ,
    `is_candidate` BOOLEAN,
    `created_time` datetime DEFAULT CURRENT_TIMESTAMP,
	`end_time` datetime DEFAULT CURRENT_TIMESTAMP,
    PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='replicas info';

CREATE TABLE `carfiles` (
	`carfile_hash` varchar(128) NOT NULL UNIQUE,
	`carfile_cid` varchar(128) NOT NULL UNIQUE,
    `total_size` BIGINT  DEFAULT '0' ,
    `total_blocks` int  DEFAULT '0' ,
	`replica` TINYINT DEFAULT '0' ,
    `expiration` datetime NOT NULL,
    `created_time` datetime DEFAULT CURRENT_TIMESTAMP,
	`end_time` datetime DEFAULT CURRENT_TIMESTAMP,
	PRIMARY KEY (`carfile_hash`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='carfile infos';

CREATE TABLE `node_update_info` (
	`node_type` int NOT NULL UNIQUE,
	`app_name` varchar(64) NOT NULL,
    `version`  varchar(32) NOT NULL,
    `hash` varchar(128) NOT NULL,
	`download_url` varchar(128) NOT NULL,
    `update_time` datetime DEFAULT CURRENT_TIMESTAMP,
	PRIMARY KEY (`node_type`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='node_update_info';

CREATE TABLE `carfile_downloading` (
	`carfile_hash` varchar(128) NOT NULL,
    `device_id` varchar(128) NOT NULL,
    `server_id` varchar(128) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='downloading carfiles table';

CREATE TABLE `carfile_waiting` (
    `id` int unsigned NOT NULL AUTO_INCREMENT,
	`carfile_hash` varchar(128) NOT NULL UNIQUE,
	`carfile_cid` varchar(128) NOT NULL,
    `replicas` int DEFAULT '0' ,
    `device_id` varchar(128) ,
    `expiration` datetime DEFAULT CURRENT_TIMESTAMP,
    `server_id` varchar(128) NOT NULL,
    PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='waiting carfiles table';

CREATE TABLE `validators` (
    `device_id` varchar(128) NOT NULL,
    `server_id` varchar(128) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='validators table';

CREATE TABLE `node_verifying` (
    `device_id` varchar(128) NOT NULL,
    `server_id` varchar(128) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='verifying ndoes table';